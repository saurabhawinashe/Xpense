<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stck2"
    tools:context="com.homex.fexp.add_expense">

    <ImageView
        android:id="@+id/healthimg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="360dp"
        app:srcCompat="@drawable/ic_health" />

    <EditText
        android:id="@+id/desc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Description"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="20dp"
         />

    <EditText
        android:id="@+id/amt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginLeft="20dp"
        android:text="Amount" />

    <EditText
        android:id="@+id/dat"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:inputType="date"
        android:layout_marginLeft="20dp"
        android:text="Date(YYYY-MM-DD)"
         />

    <EditText
        android:id="@+id/ecategory"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"

        android:layout_marginTop="205dp"
        android:inputType="textPersonName"
        android:text="@string/category" />

    <Button
        android:id="@+id/saveexp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="SAVE"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/calimage"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="150dp"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
         />

    <ImageView
        android:id="@+id/foodimg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="280dp"
        app:srcCompat="@drawable/ic_food" />

    <ImageView
        android:id="@+id/entimg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="280dp"
        app:srcCompat="@drawable/ic_ent"
        />

    <ImageView
        android:id="@+id/billsimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="280dp"
        app:srcCompat="@drawable/ic_bills"
         />

    <ImageView
        android:id="@+id/transferimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_transfer"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="280dp"
        />

    <ImageView
        android:id="@+id/shopimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_shopping"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="360dp"

        />

    <ImageView
        android:id="@+id/travelimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_card_travel"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="360dp"
         />

    <ImageView
        android:id="@+id/otherimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_other"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="360dp"
         />

    <TextView
        android:id="@+id/food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="320dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
         />

    <TextView
        android:id="@+id/entertainment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="320dp"
        android:text="Entertainment"
        android:textAppearance="@style/TextAppearance.AppCompat"
        />

    <TextView
        android:id="@+id/bills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Bills  "
        android:layout_marginLeft="218dp"
        android:layout_marginTop="320dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
         />

    <TextView
        android:id="@+id/transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transfer"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="320dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
         />

    <TextView
        android:id="@+id/travel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel"
        android:textAppearance="@style/TextAppearance.AppCompat"

        android:layout_marginLeft="22dp"
        android:layout_marginTop="395dp"
        />

    <TextView
        android:id="@+id/shopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shopping"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="395dp"
         />

    <TextView
        android:id="@+id/health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="395dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
         />

    <TextView
        android:id="@+id/other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginLeft="302dp"
        android:layout_marginTop="395dp"
        />


</RelativeLayout>
