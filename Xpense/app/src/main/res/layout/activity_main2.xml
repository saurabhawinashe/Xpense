<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.homex.fexp.Main2Activity">


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20dp"
        android:text="Create Account"
        android:textColor="#212121"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="34dp"
        android:text="Name"
        android:textColor="#212121"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/namebox"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/textView14"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="18dp"
        android:background="@android:color/background_light" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/namebox"
        android:layout_below="@+id/namebox"
        android:layout_marginTop="16dp"
        android:text="Email id"
        android:textColor="#212121"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/emailbox"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_alignEnd="@+id/namebox"
        android:layout_alignStart="@+id/textView16"
        android:layout_below="@+id/textView16"
        android:layout_marginTop="16dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/emailbox"
        android:layout_below="@+id/emailbox"
        android:layout_marginTop="22dp"
        android:text="Password"
        android:textColor="#212121"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/passbox"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:layout_alignStart="@+id/textView17"
        android:layout_below="@+id/textView17"
        android:layout_marginTop="13dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/passbox"
        android:layout_below="@+id/passbox"
        android:layout_marginTop="24dp"
        android:text="Phone number"
        android:textColor="#212121"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/phonebox"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:layout_alignStart="@+id/textView19"
        android:layout_below="@+id/textView19"
        android:layout_marginTop="13dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="phone" />

    <Button
        android:id="@+id/signbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phonebox"
        android:layout_marginStart="23dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/textView17"
        android:text="Create" />


</RelativeLayout>
